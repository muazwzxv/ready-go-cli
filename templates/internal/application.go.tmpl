// Init initializes the application using multi-source configuration loading
func Init() (*ApplicationContext, error) {
	log.Println("application: loading configuration from multiple sources")

	cfg, err := config.LoadConfig()
	if err != nil {
		return nil, fmt.Errorf("load config: %w", err)
	}

	log.Printf("application: config loaded - server: %s:%d, database: %s:%d",
		cfg.Server.Host, cfg.Server.Port, cfg.Database.Host, cfg.Database.Port)

	return NewApplicationContext(cfg)
}

// InitFromFile initializes the application from a config file path (backward compatibility)
func InitFromFile(configPath string) (*ApplicationContext, error) {
	log.Printf("application: loading configuration from %s", configPath)

	cfg, err := config.Load(configPath)
	if err != nil {
		return nil, fmt.Errorf("load config: %w", err)
	}

	return NewApplicationContext(cfg)
}
