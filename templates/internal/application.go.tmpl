// NewApplicationContext creates a new ApplicationContext with the given configuration
func NewApplicationContext(cfg *config.Config) (*ApplicationContext, error) {
	ctx := context.Background()

	// Initialize database
	dbCfg := &database.DBConfig{
		Host:            cfg.Database.Host,
		Port:            cfg.Database.Port,
		User:            cfg.Database.User,
		Password:        cfg.Database.Password,
		Database:        cfg.Database.Database,
		MaxOpenConns:    cfg.Database.MaxOpenConns,
		MaxIdleConns:    cfg.Database.MaxIdleConns,
		ConnMaxLifetime: cfg.Database.ConnMaxLifetime,
		RetryAttempts:   cfg.Database.RetryAttempts,
		RetryBackoff:    cfg.Database.RetryBackoff,
	}

	db, err := database.NewDatabase(ctx, dbCfg)
	if err != nil {
		return nil, fmt.Errorf("initialize database: %w", err)
	}

	// Create Fiber app
	app := fiber.New(fiber.Config{
		ReadTimeout:  cfg.Server.ReadTimeout,
		WriteTimeout: cfg.Server.WriteTimeout,
		BodyLimit:    cfg.Server.BodyLimit,
		Prefork:      cfg.Server.Prefork,
	})

	// Setup middleware
	app.Use(logger.New())
	app.Use(recover.New())

	// Initialize repository
	{{.SampleAPINameLower}}Repo := repository.NewMySQL{{.SampleAPIName}}Repository(db.DB)

	// Initialize service
	{{.SampleAPINameLower}}Service := service.New{{.SampleAPIName}}Service({{.SampleAPINameLower}}Repo)

	// Initialize handlers
	{{.SampleAPINameLower}}Handler := handler.New{{.SampleAPIName}}Handler({{.SampleAPINameLower}}Service)
	healthHandler := handler.NewHealthHandler(db, "1.0.0")

	appCtx := &ApplicationContext{
		app:                app,
		db:                 db,
		config:             cfg,
		{{.SampleAPINameLower}}Repo:    {{.SampleAPINameLower}}Repo,
		{{.SampleAPINameLower}}Service: {{.SampleAPINameLower}}Service,
		{{.SampleAPINameLower}}Handler: {{.SampleAPINameLower}}Handler,
		healthHandler:      healthHandler,
	}

	// Register handlers
	if err := appCtx.RegisterHandlers(); err != nil {
		db.Close()
		return nil, fmt.Errorf("register handlers: %w", err)
	}

	log.Println("application: initialized successfully")

	return appCtx, nil
}

// Start starts the Fiber server with graceful shutdown
func (a *ApplicationContext) Start() error {
	addr := fmt.Sprintf("%s:%d", a.config.Server.Host, a.config.Server.Port)
	log.Printf("application: starting server on %s", addr)

	// Start server in a goroutine
	errChan := make(chan error, 1)
	go func() {
		if err := a.app.Listen(addr); err != nil {
			errChan <- err
		}
	}()

	// Wait for interrupt signal
	sigChan := make(chan os.Signal, 1)
	signal.Notify(sigChan, os.Interrupt, syscall.SIGTERM)

	select {
	case err := <-errChan:
		return fmt.Errorf("server error: %w", err)
	case sig := <-sigChan:
		log.Printf("application: received signal %v, shutting down gracefully", sig)
	}

	// Graceful shutdown
	if err := a.app.Shutdown(); err != nil {
		log.Printf("application: error during server shutdown: %v", err)
	}

	if err := a.db.Close(); err != nil {
		log.Printf("application: error closing database: %v", err)
	}

	log.Println("application: shutdown complete")
	return nil
}

